<Window x:Class="SampleWpfApp.TaskProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="Processing" Height="174" Width="469" Loaded="Window_Loaded" ResizeMode="NoResize">
	<Grid>
		<Label x:Name="MessageLabel" Content="Working, please wait ..." HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
		<ProgressBar x:Name="TaskProgressBar" Height="21" Margin="20,56,20,0" VerticalAlignment="Top"/>
		<Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="CancelButton_Click"/>
	</Grid>
</Window>
